<!DOCTYPE html>
<html>
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
        <script>
            window.onload = function() {
                new Chart(document.getElementById("bar-chart"), {
                    type: 'bar',
                    data: { 
                        labels: [<% x_labels.forEach(function(label) { %>
                                    "<%= label %>",
                                <% }); %> ],
                        datasets: [
                            {
                                label: "Apple Sales",
                                data: [<%= data %>]
                            }
                        ]
                    },
                    options: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: 'Average Daily Apple Sales by Seller'
                        },
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            };
        </script>
    </head>

    <body>
        <canvas id="bar-chart" width="800" height="450"></canvas>
    </body>
</html>

